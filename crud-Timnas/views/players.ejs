<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Pemain Timnas U-21</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <style>
    /* CSS untuk membuat tampilan lebih menarik */
    body {
      background-color: #f8f9fa;
    }
    .logo {
      width: 100px;
      height: auto;
    }
    .card {
      margin-bottom: 20px;
      transition: transform 0.3s ease;
    }
    .card:hover {
      transform: scale(1.05);
    }
    .card-img-top {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    .btn-tambah {
      margin-bottom: 10px;
      transition: border-color 0.3s ease;
    }
    .btn-tambah:hover {
      border-color: #007bff;
    }
  </style>
</head>
<body>
  <div class="container mt-3">
    <div class="row">
      <!-- Logo Garuda -->
      <div class="col-md-6 text-left">
        <img src="../images/garuda.png" alt="Garuda Logo" class="logo">
      </div>
      <!-- Tombol Tambah Pemain -->
      <div class="col-md-6 text-right">
        <a href="/timnas" class="btn btn-outline-primary btn-sm float-right">Tambah Pemain</a>
      </div>           
    </div>
  </div>

  <!-- Daftar Pemain Timnas U-21 -->
  <div class="container mt-3">
    <h2 class="text-center">Daftar Pemain</h2>
    <h3 class="text-center">Timnas U-21</h3>
    <!-- Card Catalog Pemain -->
    <div class="row">
      <!-- Card 1 -->
      <div class="col-md-4">
        <div class="card">
          <img src="path/to/player-photo.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">Nama Pemain 1</h5>
            <p class="card-text">Posisi: Posisi Pemain 1</p>
            <p class="card-text">Nomor Punggung: #1</p>
          </div>
        </div>
      </div>
      <!-- Card 2 -->
      <div class="col-md-4">
        <div class="card">
          <img src="path/to/player-photo.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">Nama Pemain 2</h5>
            <p class="card-text">Posisi: Posisi Pemain 2</p>
            <p class="card-text">Nomor Punggung: #2</p>
          </div>
        </div>
      </div>
      <!-- Card 3 -->
      <div class="col-md-4">
        <div class="card">
          <img src="path/to/player-photo.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">Nama Pemain 3</h5>
            <p class="card-text">Posisi: Posisi Pemain 3</p>
            <p class="card-text">Nomor Punggung: #3</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Script Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFP